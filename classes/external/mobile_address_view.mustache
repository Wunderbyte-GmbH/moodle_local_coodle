<ion-content fullscreen="true">
    <ion-slides pager="true" [options]="slideOptions" class="slide-container" style="background: {{ bg }}">
        {{#adresses}}
        <ion-slide class="slide-item">
            <ion-card>
                <h2>{{ title }}</h2>
                <div>{{{ text }}}</div>
                <div>{{ text }}</div>
            </ion-card>
            <!-- Your dynamic content goes here -->

        </ion-slide>
        {{/adresses}}
    </ion-slides>
</ion-content>

<style>
    .slide-item {
        height: 100%;
    }
</style>
