<div class="container mt-4">
    <div class="row my-4">
      <div class="col-md-6">
        <h3 class="mb-4">File Explorer</h3>
      </div>
      <div class="col-md-6 text-right">
        <button class="btn btn-primary" data-toggle="modal" data-target="#uploadForm" data-action="local-coodle-add-file" data-clientid="{{clientid}}">Upload File</button>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card p-0">
          <div class="card-header text-dark">
            <h5 class="">User Files</h5>
          </div>
          <div class="card-body">
            <h4>From Advisor</h4>
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Size</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#files}}
                <tr>
                  <td>{{name}}</td>
                  <td><a href="{{url}}">Download</a></td>
                </tr>
                {{/files}}
              </tbody>
            </table>
            <h4>From Client</h4>
            <table class="table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Size</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  {{#fromfiles}}
                  <tr>
                    <td>file1.txt</td>
                    <td>Text File</td>
                    <td>1 KB</td>
                    <td><a href="#">Download</a></td>
                  </tr>
                  {{/fromfiles}}
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
  </div>

{{#js}}
require(['local_coodle/add_file'], function(fileform) {
    fileform.init();
});
{{/js}}
