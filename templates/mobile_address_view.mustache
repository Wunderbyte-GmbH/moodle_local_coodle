<ion-content fullscreen="true">
    <ion-slides pager="true" [options]="slideOptions" class="slide-container">
        {{#contentItems}}
        <ion-slide class="slide-item">
            <!-- Your dynamic content goes here -->
            <div>{{ content }}</div>
        </ion-slide>
        {{/contentItems}}
    </ion-slides>
</ion-content>

<style>
    .slide-container {
        height: 100%;
    }

    .slide-item {
        height: 100%;
    }
</style>
