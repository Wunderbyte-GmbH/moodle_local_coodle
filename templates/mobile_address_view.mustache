{{=<% %>=}}

<ion-slides pager="true" [options]="slideOptions" class="slide-container" style="background: <%bg%>">
    <%#adresses%>
    <ion-slide class="slide-item">
        <ion-card style="width:100vw;
        padding:20px;">
            <h2>><% title %></h2>
            <div>{{{ text }}}</div>
        </ion-card>
        <!-- Your dynamic content goes here -->

    </ion-slide>
    <%/adresses%>
</ion-slides>

<style>
    ion-card {
        width:100vw;
        padding:10px;
        min-height: 100%;
    }
    .slide-item {
        height: 100%;
    }
    ion-slides {
        min-height: 100%;
    }
</style>
