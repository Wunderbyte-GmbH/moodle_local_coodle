{{=<% %>=}}
<div style="height: 100%; background: <%bg%>">
    <%>local_coodle/mobile/mobile_header%>
    <ion-list
        color="black"
        style="
            background-color: transparent;
            background: transparent;
            --background: transparent;
        "
    >
        <%#otherfiles%>
        <ion-item-sliding
            class="ion-border"
            style="
                background-color: transparent;
                background: transparent;
                --background: transparent;
            "
        >
            <ion-item
                style="
                    background-color: transparent;
                    background: transparent;
                    --background: transparent;
                "
            >
                <core-file
                    color="none"
                    lines="none"
                    class="ion-no-border"
                    [file]="{
                        fileurl: '<%url%>',
                        filename: '<%namewithoutextension%>'
                    }"
                    canDownload="true"
                    style="
                        border: none;
                        padding: 0px;
                        display: contents;
                        width: 100%;
                    "
                >
                </core-file>
            </ion-item>
            <%#deleteable%>
            <ion-item-options side="end">
                <ion-item-option
                    color=""
                    core-site-plugins-call-ws
                    name="local_coodle_delete_file"
                    [params]="{fileid: <%id%>}"
                    confirmMessage="are you sure?"
                    successMessage="file deleted"
                    refreshOnSuccess="true"
                >
                    <ion-icon
                        color="white"
                        s
                        lot="icon-only"
                        name="trash"
                    ></ion-icon>
                </ion-item-option>
            </ion-item-options>
            <%/deleteable%>
        </ion-item-sliding>
        <%/otherfiles%>
    </ion-list>
    <ion-row class="row">
        <ion-col class="col-md-12">
            <%#adresscard%>
            <ion-card>
                <ion-card-header>
                    <ion-card-title> <%name%> </ion-card-title>
                    <ion-card-subtitle> Meine BeraterIn </ion-card-subtitle>
                </ion-card-header>
                <ion-card-content>
                    <p><%adress%><%nr%></p>
                    <p><%zipcode%> <%city%></p>
                    <p><%phone%></p>
                    <p><%email%></p>
                    <p><%berufsbezeichnung%></p>
                    <p><%institution%></p>
                </ion-card-content>
            </ion-card>
            <%/adresscard%>
        </ion-col>
    </ion-row>
    <ion-row class="row">
        <ion-col class="col-md-12">
            <%#links%>
            <ion-button
                expand="full"
                href="<%url%>"
                color="dark"
                style="width: 100%"
                ><%text%></ion-button
            >
            <%/links%>
        </ion-col>
    </ion-row>
</div>
