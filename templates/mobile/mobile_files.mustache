{{=<% %>=}}
<div style="min-height: 100%; background: <%bg%>">
    <%>local_coodle/mobile/mobile_header%>
    <ion-list
        color="black"
        style="
            background-color: transparent;
            background: transparent;
            --background: transparent;
        "
    >
        <%#otherfiles%>
        <ion-item-sliding
            class="ion-border"
            style="
                background-color: transparent;
                background: transparent;
                --background: transparent;
            "
        >
            <ion-item
                style="
                    background-color: transparent;
                    background: transparent;
                    --background: transparent;
                "
            >
                <core-file
                    color="none"
                    lines="none"
                    class="ion-no-border"
                    [file]="{
                        fileurl: '<%url%>',
                        filename: '<%namewithoutextension%>'
                    }"
                    canDownload="true"
                    style="
                        border: none;
                        padding: 0px;
                        display: contents;
                        width: 100%;
                    "
                >
                </core-file>
            </ion-item>
            <%#deleteable%>
            <ion-item-options side="end">
                <ion-item-option
                    color=""
                    core-site-plugins-call-ws
                    name="local_coodle_delete_file"
                    [params]="{fileid: <%id%>}"
                    confirmMessage="are you sure?"
                    successMessage="file deleted"
                    refreshOnSuccess="true"
                >
                    <ion-icon
                        color="white"
                        s
                        lot="icon-only"
                        name="trash"
                    ></ion-icon>
                </ion-item-option>
            </ion-item-options>
            <%/deleteable%>
        </ion-item-sliding>
        <%/otherfiles%>
    </ion-list>
</div>
