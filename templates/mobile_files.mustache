{{=<% %>=}}
<ion-grid class="container mt-4">
    <ion-row class="row">
      <ion-col class="col-md-12">
        <ion-card style="background-color: <%bg%>;">
          <ion-card-header>
            <ion-card-title><%hl%></ion-card-title>
          </ion-card-header>
          <ion-card-content>
            <%#otherfiles%>
            <core-file  [file]="{fileurl: '<%url%>',
              filename: '<%name%>'}"
              canDownload = "true">
            </core-file>
            <%/otherfiles%>
          </ion-card-content>
        </ion-card>
        </ion-col>
      </ion-row>
  </ion-grid>
