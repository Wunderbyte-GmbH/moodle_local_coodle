{{=<% %>=}}

<ion-card style="background-color: <%bg%>">
  <ion-card-header>
    <ion-card-title style="color: <%text%>"><%hl%></ion-card-title>
  </ion-card-header>
  <ion-card-content>
    <%#otherfiles%>
    <ion-row style="background: #fff" class="ion-align-items-center">
      <ion-col size="9">
        <core-file
          [file]="{ fileurl: '<%url%>', filename: '<%name%>' }"
          canDownload="true"
          style="border: none !important; padding: 0px"
        >
        </core-file>
      </ion-col>
      <ion-col size="auto" style="padding-left: 0">
        <ion-button
          core-site-plugins-call-ws
          name="local_coodle_delete_file"
          [params]="{fileid: <%id%>}"
          confirmMessage="are you sure?"
          successMessage="file deleted"
          refreshOnSuccess="true"
          >X
        </ion-button>
      </ion-col>
    </ion-row>
    <%/otherfiles%>
  </ion-card-content>
</ion-card>
