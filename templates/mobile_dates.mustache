{{=<% %>=}}
<div style="height:100%; background: <%bg%>">
  <h3><% today %></h3>
  <ion-grid class="container mt-4">
    <ul>
      <%#events%>
      <li><b><%timestart%></b> - <%name%> <br> <%location%></li>
      <%/events%>
    </ul>
  </ion-grid>
</div>


{{=<% %>=}}
<div style="height: 100%; background: <%bg%>">
    <ion-list
        color="black"
        style="
            background-color: transparent;
            background: transparent;">
      <%#events%>
      <ion-item
      style="
          background-color: transparent;
          background: transparent;
          --background: transparent;
      "
  >
      <b><%timestart%></b> - <%name%> <br> <%location%>
      <br>
      <%description%>
      </ion-item>
      <%/events%>
    </ion-list>
</div>
